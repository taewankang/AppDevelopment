<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/option"
        android:layout_marginTop="20dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/name_button">
            <ImageButton
                style="@style/Alarm_name"
                android:background="@drawable/pink_circle" />
            <TextView
                style="@style/Alarm_name"
                android:gravity="center"
                android:id="@+id/name"
                android:textSize="15sp"/>
        </FrameLayout>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/search"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_action_search"/>

        <Button
            android:id="@+id/search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/add"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_action_delete"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/add"
            android:background="@drawable/ic_action_person_add"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="프로젝트 멤버"
        android:layout_marginTop="20dp"
        android:textSize="30dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/member_linear">
        </LinearLayout>
    </ScrollView>
</LinearLayout>