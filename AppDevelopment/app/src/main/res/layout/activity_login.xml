<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="40dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kopubdotummedium"
        android:text="@string/team_name"
        android:textSize="30sp"
        android:layout_marginVertical="60dp"
        android:textColor="#3A3E6B"
        android:gravity="center"/>

        <EditText
            style="@style/Login_EditText"
            android:id="@+id/ID"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/kopubdotummedium"
            android:hint="아이디"/>

        <EditText
            style="@style/Login_EditText"
            android:id="@+id/password"
            android:inputType="textPassword"
            android:fontFamily="@font/kopubdotummedium"
            android:hint="비밀번호"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호를 잊어버리셨나요?"
            android:layout_marginTop="10dp"
            android:onClick="forgetPassword"
            android:textSize="15sp"
            android:fontFamily="@font/kopubdotumbold"
            android:textColor="#465FB5"/>

        <Button
            style="@style/Login_Button"
            android:background="@drawable/deep_round_rectangle"
            android:text="LOG IN"
            android:fontFamily="@font/kopubdotummedium"
            android:layout_marginTop="100dp"
            android:onClick="login"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="OR"
            android:textSize="15sp"
            android:gravity="center"
            android:fontFamily="@font/kopubdotumlight"
            android:textColor="#000000"/>
        <Button
            style="@style/Login_Button"
            android:background="@drawable/deep_round_rectangle2"
            android:text="LOG IN WITH GOOGLE"
            android:fontFamily="@font/kopubdotummedium"
            android:onClick="loginGoogle"/>
    </LinearLayout>
</LinearLayout>