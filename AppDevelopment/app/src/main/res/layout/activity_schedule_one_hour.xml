<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:id="@+id/spinner"-->
<!--                android:entries="@array/schedule_controller"-->
<!--                android:layout_weight="2"/>-->
    </LinearLayout>
    <ScrollView
