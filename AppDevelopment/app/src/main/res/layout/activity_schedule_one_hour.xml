                <Button
                    android:id="@+id/four_five"
                    style="@style/tableRow_Button"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <Button
                    style="@style/tableRow_textView"
                    android:text="5"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/five_one"
                    style="@style/tableRow_Button"/>
                <Button
                    android:id="@+id/five_two"
