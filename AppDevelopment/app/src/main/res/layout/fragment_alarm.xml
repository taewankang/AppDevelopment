<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alarm_background"
    android:adjustViewBounds="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/name_button">
            <ImageButton
                style="@style/Alarm_name"
                android:background="@drawable/pink_circle" />
            <TextView
                style="@style/Alarm_name"
                android:gravity="center"
                android:id="@+id/name"
                android:fontFamily="@font/kopubdotumbold"
                android:textSize="15sp"/>
        </FrameLayout>

        <Button
            android:id="@+id/search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/add"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_action_search" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/add"
            android:layout_marginRight="30dp"
            android:background="@drawable/ic_action_add_alert"/>
    </RelativeLayout>

    <!--새로 추가-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/entry_textView"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/kopubdotummedium"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kopubdotummedium"
        android:textColor="#A70A0A"
        android:layout_marginTop="10dp"
        android:text="최근 알람을 확인하세요"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/project_alarm"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>