<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:gravity="right"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <LinearLayout
                    style="@style/menuRecLinearLayout"
                    android:background="@drawable/menurectangle"
                    android:layout_marginHorizontal="20dp">
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <FrameLayout
                                    style="@style/menuRecFrameLayout"
                                    android:layout_marginHorizontal="10dp">
                                    <ImageButton
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/add_image_button"
                                        android:background="@drawable/menucircle"/>
                                    <ImageView
                                        style="@style/menuCircleImageView"
                                        android:src="@drawable/ic_action_add" />
                                </FrameLayout>
                                <TextView
                                    style="@style/menuTextView"
                                    android:text="그룹 추가"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <FrameLayout
                                    style="@style/menuRecFrameLayout"
                                    android:layout_marginHorizontal="10dp">
                                    <ImageButton
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/alarm_image_button"
                                        android:background="@drawable/menucircle"/>
                                    <ImageView
                                        style="@style/menuCircleImageView"
                                        android:src="@drawable/ic_action_alarm" />
                                </FrameLayout>
                                <TextView
                                    style="@style/menuTextView"
                                    android:text="알람"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <FrameLayout
                                    style="@style/menuRecFrameLayout"
                                    android:layout_marginHorizontal="10dp">
                                    <ImageButton
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/menucircle"/>
                                        <ImageView
                                            style="@style/menuCircleImageView"
                                            android:id="@+id/subway_image_button"
                                            android:src="@drawable/ic_action_subway"/>
                                </FrameLayout>
                                <TextView
                                    style="@style/menuTextView"
                                    android:text="지하철"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <FrameLayout
                                    style="@style/menuRecFrameLayout"
                                    android:layout_marginHorizontal="10dp">
                                    <ImageButton
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/menucircle"/>
                                        <ImageView
                                            style="@style/menuCircleImageView"
                                            android:src="@drawable/ic_action_name"/>
                                    </FrameLayout>
                                <TextView
                                    style="@style/menuTextView"
                                    android:text="무엇?"/>
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginVertical="40dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/square"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginVertical="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/square"/>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>